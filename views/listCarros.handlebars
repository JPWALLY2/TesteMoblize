  <table class="table col-10 mx-auto">
  <thead class="thead-light">
    <tr class="text-center">
      <th>Modelo</th>
      <th>Categoria</th>
      <th></th>
      <th></th>

    </tr>
  </thead>
  <tbody>
{{#each carros}}
    <tr class="text-center">
      <td>{{modelo}}</td>
      <td>{{categoria}}</td>
      <td></td>
       <td><a href="/infoCarros/{{_id}}" class="btn btn-info" title="Mais Informações"> M.I.</a></td>
{{else}}
        <th class="text-center" colspan="10"> Nenhum carro registrada</th>
{{/each}}
    </tr>
  </tbody>
</table>
 </body>
 </html>

 <script src="/js/jquery.min.js"></script>
